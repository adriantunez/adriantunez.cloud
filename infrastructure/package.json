{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:bootstrap:prod": "cdk bootstrap --context environment=prod",
    "cdk:synth:prod": "cdk synth --context environment=prod",
    "cdk:diff:prod": "cdk diff --context environment=prod",
    "cdk:deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "cdk:destroy:prod": "cdk destroy --all --force --context environment=prod",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "^2.1005.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.188.0",
    "constructs": "^10.0.0"
  }
}
